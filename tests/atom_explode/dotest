#!/bin/bash

. ../init.sh

d=$PWD
[[ $PORTDIR == "" ]] && PORTDIR=$(portageq envvar PORTDIR)
cd ${PORTDIR}/metadata/cache || { echo SKIPPED; exit 0 ; }

if [[ $1 == -v ]] ; then
	find . -mindepth 2 -type f -printf '%P\n%f\n' | while read line ; do
		echo "TESTING $line: "
		"$d"/e "${line}"
	done
	exit 0
fi

# split the disk i/o out so both tests are CPU bound only
files=$(find . -mindepth 2 -type f -printf '%P\n%f\n')

echo -n "atom_explode():"
time echo "${files}" | "$d"/e > "$d"/me || exit $?
echo

echo -n "portage:"
time echo "${files}" | "$d"/atom-explode.py > "$d"/py || exit $?
echo

if diff -U 0 "$d"/me "$d"/py ; then
	echo "PASSED"
else
	echo "FAIL ! :("
fi
