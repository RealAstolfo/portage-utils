#!/bin/bash

d=$PWD
cd /usr/portage/metadata/cache || exit 1

echo -n "atom_explode():"
time find . -mindepth 2 -type f -printf '%P\n' | xargs "$d"/q > "$d"/me
echo

echo -n "portage:"
time find . -mindepth 2 -type f -printf '%P\n' | xargs "$d"/atom-explode.py > "$d"/py
echo

if diff -u "$d"/me "$d"/py ; then
	echo "PASSED"
else
	echo "FAIL ! :("
fi
